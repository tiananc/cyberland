---
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Content from '../components/containers/Content.astro'
const { frontmatter } = Astro.props;

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;400;500;600;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="../styles/style.css">
		<title>{frontmatter.title}</title>
	</head>
	<body class = "bg-light-gradient min-h-screen font-sans text-dark-blue">
		<Header/>
		<Navigation/>
		<div class = "flex justify-center flex-col items-center px-32 py-4">
         <ul class = "flex justify-center flex-col items-center">
			<li class = "flex justify-center flex-col items-center">
			<Content>
				<span slot = "headercontent">adventures in cyberland</span>
                <span slot ="headerdate">06-23-2024</span>
				<slot><a href="/posts/first-post.md">First Post</a></slot>
            </Content>
			</li>
			<li class = "flex justify-center flex-col items-center"></li>
			<Content>
				<span slot = "headercontent">adventures in cyberland</span>
                <span slot ="headerdate">06-23-2024</span>
				<slot><a href="/posts/first-post.md">First Post</a></slot>
            </Content>
        </li>
        </ul>
			</div>
		</div>
		<Footer/>
	</body>
</html>